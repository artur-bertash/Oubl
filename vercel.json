{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/vps-3001/(.*)",
      "destination": "http://74.208.167.229:3001/$1"
    },
    {
      "source": "/vps-3002/(.*)",
      "destination": "http://74.208.167.229:3002/$1"
    }
  ],
  "functions": {
    "api/explain.js": {
      "maxDuration": 30
    },
    "api/health.js": {
      "maxDuration": 10
    },
    "api/translate.js": {
      "maxDuration": 10
    }
  }
}